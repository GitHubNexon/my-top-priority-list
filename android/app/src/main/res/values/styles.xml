<resources>
    <style name="AppTheme" parent="Theme.EdgeToEdge.Material3.Dynamic">
        <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
        <item name="materialButtonStyle">@style/Widget.Material3.Button</item>
        <item name="enforceNavigationBarContrast">false</item>
    </style>

    <style name="AppTheme.TransparentAlarm" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Fully transparent background -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- Transparent system bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Full screen immersive mode -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <!-- No action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BootTheme" parent="Theme.BootSplash">
        <item name="bootSplashBackground">@color/bootsplash_background</item>
        <item name="bootSplashLogo">@drawable/bootsplash_logo</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="postBootSplashTheme">@style/AppTheme</item>
    </style>
</resources>